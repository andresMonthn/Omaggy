{
  "name": "omaggy-desktop",
  "productName": "Omaggy",
  "version": "1.0.0",
  "description": "Desktop Application for Omaggy",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-packager . --out=dist --overwrite",
    "dist": "electron-builder"
  },
  "author": "Omaggy",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "@electron/packager": "^18.3.5"
  },
  "build": {
    "appId": "com.omaggy.desktop",
    "files": [
      "main.js",
      "preload.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "directories": {
      "output": "dist-builder"
    }
  }
}
